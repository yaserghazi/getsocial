<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>

        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <stroke
                android:width="1dp"
                android:color="@color/purple_700"
                />
            <gradient
                android:angle="90"
                android:centerX="100%"

                android:centerColor="#80FFFFFF"
                android:startColor="#A8FFFFFF"
                android:endColor="#A8FFFFFF"
                />
            <padding
                android:left="5dp"
                android:top="0dp"
                android:right="5dp"
                android:bottom="0dp"
                />
        </shape>
    </item>
</selector>